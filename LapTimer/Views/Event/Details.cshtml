@model LapTimer.Models.Event

@{
    ViewBag.Title = "Details";
    ViewBag.PageClass = "type-interior";
    ViewBag.PageId = "details";
}

@section Resources {
    <script type="text/javascript">eventId = "@Model.Id";</script>
    <script src="@Url.Content("~/Content/Event/Details.js")" type="text/javascript"></script>
}

@section HeaderButtons {
    @Html.RouteLink("Timing", "ByDate", new { slug = Model.Location.Slug, date = Model.Date.ToSlug(), action = "Timing" })
}

@section Secondary {
    <h2 class="ui-bar-b ui-li ui-li-divider">Location</h2>
    <section>
        @Html.DisplayFor(model => model.Location.Name)
        @Html.DisplayFor(model => model.Date)
        
    </section>

        <ul data-role="listview" class="sessions">
            <li data-role="list-divider">Sessions</li>
        @foreach (var s in Model.Sessions)
        {
            <li><a href="#" data-session="@s.Id">Session @(s.Id + 1)</a></li>
        }
        </ul>
}

<div id="sessionDetails"><ul></ul></div>