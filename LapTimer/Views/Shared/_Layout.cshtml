<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewBag.Title</title>
    <link href="http://code.jquery.com/mobile/1.1.1/jquery.mobile-1.1.1.min.css" rel="stylesheet" type="text/css" />
    <link href="http://dev.jtsage.com/cdn/simpledialog/latest/jquery.mobile.simpledialog.min.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/mobile/1.1.1/jquery.mobile-1.1.1.min.js" type="text/javascript"></script>
    <script src="http://dev.jtsage.com/cdn/simpledialog/latest/jquery.mobile.simpledialog2.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/Main.js")"></script>
    <script type="text/javascript">
        ROOT_URL = ensureEndsWith("@(new Uri(new Uri(Request.Url.GetLeftPart(UriPartial.Authority)), Url.Content("~")))", "/");
    </script>
    
</head>
<body>
    <div data-role="page" data-url="@Request.Path" class="@(ViewBag.PageClass ?? "")" id="@(ViewBag.PageId ?? "")">
        @RenderSection("Resources", false)
        <header data-role="header">
            <h1>@ViewBag.Title</h1>
            @Html.ActionLink("Home", "Index", "Home", null, new { data_role = "button", data_icon = "home", data_iconpos = "notext", @class="ui-btn-left" })
            @RenderSection("HeaderButtons", false)
        </header>
        <section data-role="content">
        @if (IsSectionDefined("Secondary")) {
            <div class="content-secondary">
                @RenderSection("Secondary")
            </div>
            <div class="content-primary">
                @RenderBody()
            </div>
        } else {
            @RenderBody()
        }
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
